<div class="container">
<%= form_for @link, :html => { :class => 'well span12' } do |f| %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <div class="row-fluid">
      <div class="span5">
        <label>Name</label>
        <%= f.text_field :name, :class => 'span12', :placeholder =>"Name of The link" %>

        <label>Link Url</label>
        <%= f.text_field :url, :class => 'span12' %>

        <label>Tags</label>
        <%= f.text_field :tags, :class => 'span12' %>

        <label>Category</label>
        <%= f.text_field :category, :class => 'span12' %>

        <label>Language</label>
        <%= f.text_field :language, :class => 'span12' %>

        <label>Country</label>
        <%= f.text_field :country, :class => 'span12' %>

      </div>
      <div class="span7">
        <label>Description</label>
        <%= f.text_area :description, :class => 'input-xlarge span12', :rows => 15 %>
      </div>

      <%= f.submit nil, :class => 'btn btn-primary pull-right' %>

    </div>
<% end %>
  </div>

